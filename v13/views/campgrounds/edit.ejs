
<% include ../partials/header %>
    <div class="row">
        <h1 class="text-center">Edit <b><%=foundCampground.name%></b></h1>
        <div style="width:30%; margin: 0 auto;" >
                <form action="/campgrounds/<%=foundCampground._id%>/?_method=PUT" method="POST">
                    <div class="form-group"><input class="form-control" type="text" name="campground[name]" value="<%=foundCampground.name%>"></div>
                    <div class="form-group"><input class="form-control" type="number" name="campground[price]" value="<%=foundCampground.price%>" min="0.01" step="0.01"></div>                                        
                    <div class="form-group"><input class="form-control" type="text" name="campground[image]" value="<%=foundCampground.image%>"></div>
             
                    <div class="form-group"><input class="form-control" type="text" name="campground[description]" value="<%=foundCampground.description%>"></div>
                    <div class="form-group"> <button class="btn-primary btn btn-lg btn-block">Submit!</button></div>
                    
                </form>
                <a href="/campgrounds">Go back!</a>
        </div>   
    </div>
<% include ../partials/footer %>
