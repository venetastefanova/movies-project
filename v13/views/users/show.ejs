<% include ../partials/header %>
        
<div class="row">
        <div class="col-md-4">
            <h2><%=user.firstName + " " + user.lastName%> </h2>              
            <div class="thumbnail">
              <img src="<%=user.avatar%>" alt="user profile image">
                 <div class="caption">
                     Email:<a href="mailto:<%=user.email%>"><%=user.email%></a><br>
                     About me: <%=user.description%>
                </div>  
                <% if(currentUser && user._id.equals(currentUser._id)){ %>
                    <a href="/my-profile/<%=user._id%>/edit"class="btn btn-xs btn-warning">Edit profile</a>
                   <%}%>                     
                </div>
             </div>
        <div class="col-md-2"></div>
                
        <div class="col-md-6">
                <h3>Campgrounds by me</h3>
                
                <div class="row text-center" style="display:flex; flex-wrap:wrap;">
                     <div class="col-md-6 col-sm-6">                    
                        <% campgrounds.forEach(function(campground){%>
                            <div class="thumbnail">
                               <img src="<%=campground.image%>" alt="campground-image">
                               <a href="/campgrounds/<%=campground.id%>"><%=campground.name%></a>
                               <p> <a href="/campgrounds/<%=campground.id%>" class="btn btn-primary">More info</a></p>
                            </div>
            
                        <%})%>
                </div>

            </div>

                   
            
        </div>


</div>

<% include ../partials/footer %>